<article class="{{post_class}}">
  <header class="post-header">
    <h1>
    	{{#if linkPost}}
    		<a href="{{url}}" class="permalink">{{title}}</a>
    	{{else}}
    		{{title}}
    	{{/if}}
    </h1>
    {{^is "page"}}
    	<p class="post-meta">
    		<span class="author">{{author.name}}</span> wrote this on
    		<time class="post-time" datetime="{{date format='YYYY-MM-DD'}}">{{date}}</time>.
		</p>
	{{/is}}
  </header>

  <div class="post-content">
  {{content}}
  </div>

  {{^is "page"}}
  <hr>
  <footer class="post-footer">
    {{^is "page"}}
    	<p class="post-meta post-meta--footer">
    		<span class="author">{{author.name}}</span> wrote this on
    		<time class="post-time" datetime="{{date format='YYYY-MM-DD'}}">{{date}}</time>.
		</p>
	{{/is}}
    <nav class="post-nav">
      {{#prev_post}}<span class="post-nav-item prev">Previous: <a href="{{url}}">{{title}}</a></span>{{/prev_post}}
      {{#next_post}}<span class="post-nav-item next">Next: <a href="{{url}}">{{title}}</a></span>{{/next_post}}
    </nav>
  </footer>
  {{/is}}
</article>
